<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/shape_bg_buttom</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="RoboTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="RoboTextStyle.small" parent="RoboTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RoboTextStyle.small.gray" parent="RoboTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="RoboTextStyle.title" parent="RoboTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RoboTextBoldStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/robotobold</item>
    </style>


    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>
</resources>
